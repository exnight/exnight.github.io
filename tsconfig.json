{
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": [
      "./custom_typings"
    ]
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.d.ts",
    ".eslintrc.js",
    "postcss.config.js",
    "tailwind.config.js",
    "util/sharp.js",
  ],
  "compileOnSave": false
}
