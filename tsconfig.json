{
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./custom_typings"
    ]
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*",
    "**/*.ts",
    ".eslintrc.js",
    "postcss.config.js",
    "tailwind.config.js",
  ],
  "compileOnSave": false
}
